<!DOCTYPE html>
<html lang="en">
  <%- include('./partiols/ico.ejs')%>
  <%- include('./partiols/post.ejs')%>

<body>
  <%- include('./partiols/nav.ejs') %>

  <div class="arrow">
    <a href="/posts"> x </a>
  </div>
      <article>
        <div class="info">
          <span><%=post.createdAt.toDateString() || 'no data'%></span>
          <span><%=post.author%></span>
          <span class="del" data-id="<%=post.id%>">delete</span>
          <a href="/edit/<%= post.id%>" class="res" >res</a>
        </div>
        <h1><%=post.title%></h1>
        <p>
          <%=post.text%>
        </p>
      </article>
    
    <script>
        document.addEventListener('click', (e) => {
        const id = e.target?.dataset.id || null
        fetch(`/posts/${id}`, {
          method: 'DELETE',

        }).then(() => window.location.href = '/posts')
      })
    </script>
</body>
</html>